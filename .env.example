# Application Settings
APP_NAME=Loops API
APP_VERSION=0.1.0
DEBUG=True

# API Settings
API_V1_PREFIX=/api/v1

# CORS Settings (comma-separated list)
ALLOWED_ORIGINS=*

# Database Settings
# Format: postgresql+asyncpg://user:password@host:port/database
# For Supabase: postgresql+asyncpg://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/loops
DATABASE_ECHO=False

# JWT Authentication Settings
# IMPORTANT: Change SECRET_KEY in production! Use: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Supabase Auth
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLISHABLE_KEY=sb_publishable_xxx
# Required for Storage write + admin operations
SUPABASE_SECRET_KEY=sb_secret_xxx

# Supabase Storage
SUPABASE_STORAGE_BUCKET=card-images

# Gemini (Google GenAI SDK) - Image generation
GEMINI_API_KEY=your-gemini-api-key
GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview
